<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.iteso.escalaapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/sebas_nacional_2_recortada"
        android:roundIcon="@drawable/sebas_nacional_2_recortada"
        android:supportsRtl="true"

        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.ActivitySplashScreen"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ActivityLogin"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustUnspecified" />
        <activity
            android:name=".activities.ActivitySignIn"
            android:screenOrientation="userPortrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity android:name=".activities.ActivityProfile" />
        <activity
            android:name=".activities.ActivityEditProfile"
            android:windowSoftInputMode="stateAlwaysHidden|adjustUnspecified" />
        <activity android:name=".activities.ActivityGym" />
        <activity android:name=".activities.ActivityClimber" />
        <activity android:name=".activities.ActivityCompetition" />
        <activity android:name=".activities.ActivityJudging" />
        <activity android:name=".results.ActivityResults" />
        <activity
            android:name=".activities.ActivityMain"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.ActivityCompRegister" />
        <activity android:name=".activities.ActivitySettings" />
        <activity
            android:name=".activities.ActivitySignGym"
            android:parentActivityName=".activities.ActivitySettings"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustUnspecified" />
        <activity
            android:name=".settings.ActivityCreateCompetition"
            android:windowSoftInputMode="stateAlwaysHidden|adjustUnspecified"></activity>
    </application>

</manifest>