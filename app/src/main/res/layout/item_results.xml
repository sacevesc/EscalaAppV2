<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:scrollbarStyle="outsideOverlay"
    card_view:cardCornerRadius="4dp">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/item_results_relative"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/five"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_results_ranking"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/five"
                android:text="1"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/item_results_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/four"
                android:gravity="center"
                android:text="Chris Sharma"
                android:textColor="@color/colorBlack"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:id="@+id/item_results_linear_boulders"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:layout_marginBottom="1dp"
                android:layout_marginStart="@dimen/five"
                android:orientation="horizontal">


            </LinearLayout>

            <TextView
                android:id="@+id/item_results_sum"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/fifeteen"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="@dimen/five"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:text="5t 4b"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </HorizontalScrollView>
</android.support.v7.widget.CardView>
